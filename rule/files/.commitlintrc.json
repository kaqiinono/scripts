{
  "extends": [ "@commitlint/config-conventional" ],
  "rules": {
    "header-max-length": [
      0,
      "always",
      100
    ],
    "type-enum": [
      2,
      "always",
      [
        "feat",
        "fix",
        "docs",
        "style",
        "refactor",
        "test",
        "revert",
        "perf",
        "chore",
        "conflict",
        "release",
        "merge",
        "repair"
      ]
    ]
  }
}
